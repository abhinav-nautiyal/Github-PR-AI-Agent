# GitHub Personal Access Token (PAT) with 'repo' scope
GITHUB_TOKEN="ghp_YourGitHubTokenHere"

# The full name of the repository you want the agent to work on
GITHUB_REPO_NAME="your_username/your_repository_name"

# Your AI API Keys
GEMINI_API_KEY="YourGoogleGeminiAPIKeyHere"
PERPLEXITY_API_KEY="YourPerplexityAPIKeyHere"

# Default model to use (gemini or perplexity)
DEFAULT_AI_MODEL="gemini"

# Optional: for webhook verification
GITHUB_WEBHOOK_SECRET="your_webhook_secret"

# Polling configuration (optional)
ENABLE_POLLING="false"
POLLING_INTERVAL="300"
MONITORED_REPOS="your_username/your_repository_name"